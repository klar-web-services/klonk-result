{
  "name": "@fkws/klonk-result",
  "version": "0.0.3",
  "module": "index.ts",
  "type": "module",
  "private": false,
  "description": "A Proxy-based Result type for TypeScript.",
  "repository": "https://github.com/klar-web-services/klonk-result",
  "homepage": "https://klonk.dev",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "author": "FKWS (https://klonk.dev)",
  "exports": {
    ".": {
      "import": {
        "types": "./dist/index.d.ts",
        "default": "./dist/index.js"
      },
      "require": {
        "types": "./dist/index.d.cts",
        "default": "./dist/index.cjs"
      }
    }
  },
  "keywords": [
    "result",
    "typescript",
    "proxy",
    "railway-oriented",
    "type-safe"
  ],
  "devDependencies": {
    "@types/bun": "latest",
    "@vitest/coverage-v8": "^4.0.3",
    "bunup": "^0.6.2",
    "vitest": "^4.0.3"
  },
  "peerDependencies": {
    "typescript": "^5"
  },
  "scripts": {
    "start": "bun index.ts",
    "build": "bunx rimraf dist && bunup",
    "prepublishOnly": "bun run build",
    "test": "vitest run",
    "test:watch": "vitest",
    "test:coverage": "vitest run --coverage",
    "release": "bun scripts/release.js",
    "release:patch": "bun scripts/release.js patch",
    "release:minor": "bun scripts/release.js minor",
    "release:major": "bun scripts/release.js major"
  },
  "files": [
    "dist"
  ]
}
